<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linfengda.sb.chapter1.system.dao.SystemDao">

    <select id="pageUserList" parameterType="java.util.Map" resultType="com.linfengda.sb.chapter1.system.entity.vo.UserListVO">
        select
        id as userId,
        user_name as userName,
        phone as phone,
        create_user as createUser,
        create_time as createTime
        from sys_user as su
        where
        su.deleted=0
        <if test="@org.apache.commons.lang.StringUtils@isNotBlank(status)">
            and su.status=#{status}
        </if>
        <if test="@org.apache.commons.lang.StringUtils@isNotBlank(userName)">
            and su.user_name=#{userName}
        </if>

    </select>

</mapper>